                            <div class="form-group">
                                    <table>
                                        <tr>
                                            <td>
                                                  <input class="btn btn-primary btn-block" type="submit" value="Upload" />

                                            </td>
                                            <td>
                                                    <a class="btn btn-primary btn-block" asp-action="Index">Back to List</a>

                                            </td>
                                        </tr>
                                    </table>
                          </div>
                        </form>
                    </div>
                </div> 
    </div>
</div>
      

