@model Traveller.Domain.BorderCrossing




<h4>Frontier</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BorderCrossingID" />
            <div class="form-group">
                <label asp-for="DestinationOriginID" class="control-label"></label>
                <select asp-for="DestinationOriginID" class="form-control" asp-items="ViewBag.OriginID"></select>
                <span asp-validation-for="DestinationOriginID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinationFinalID" class="control-label"></label>
                <select asp-for="DestinationFinalID" class="form-control" asp-items="ViewBag.FinalID"></select>
                <span asp-validation-for="DestinationFinalID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BorderCrossingType.BorderCrossingTypeID" class="control-label"></label>
                <select asp-for="BorderCrossingType.BorderCrossingTypeID" class="form-control" asp-items="ViewBag.FrontierTypes" ></select>
                <span asp-validation-for="BorderCrossingType.BorderCrossingTypeID" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <table>
                    <tr>
                        <td>
                              <input class="btn btn-primary btn-block" type="submit" value="Save" />

                        </td>
                        <td>
                                <a class="btn btn-primary btn-block" asp-action="Index">Back to List</a>

                        </td>
                    </tr>
                </table>
            </div>
        </form>
    </div>
</div>



