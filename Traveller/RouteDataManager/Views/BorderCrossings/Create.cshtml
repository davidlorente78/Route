@model Traveller.Domain.BorderCrossing


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Creating new Frontier</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DestinationOriginID" class="control-label"></label>
                <select asp-for="DestinationOriginID" class ="form-control" asp-items="ViewBag.OriginID"></select>
            </div>
            <div class="form-group">
                <label asp-for="DestinationFinalID" class="control-label"></label>
                <select asp-for="DestinationFinalID" class ="form-control" asp-items="ViewBag.FinalID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
              <div class="form-group">
                <label asp-for="BorderCrossingType" class="control-label"></label>
                <select asp-for="BorderCrossingType" class="form-control" asp-items="ViewBag.FrontierTypes"></select>
                <span asp-validation-for="BorderCrossingType" class="text-danger"></span>
            </div>
              <div class="form-group">
                   <table>
                    <tr>
                        <td>
                            <input type="submit" value="Create" class="btn btn-primary btn-block" />
                        </td>
                        <td>
                            <a class="btn btn-primary btn-block" asp-action="Index">Back to List </a>

                        </td>
                    </tr>
                </table>
            </div>
        </form>
    </div>
</div>

@*<div>
    <a asp-action="Index">Back to List</a>
</div>*@

</body>
</html>
