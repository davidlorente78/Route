@using RouteDataManager.ViewModels.Destination
@model DestinationViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Creating New Destination</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="View">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="form-group">
                <label class="control-label">Country</label>
                <select asp-for="CountryID" class ="form-control" asp-items="ViewBag.CountryID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

              <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Picture" class="control-label"></label>
                        <div class="custom-file">
                            <input asp-for="Picture" class="custom-file-input" />
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                        <span asp-validation-for="Picture" class="text-danger"></span>
                    </div>
                </div>
         
            <div class="form-group">
                <table>
                    <tr>
                        <td>
                            <input type="submit" value="Create" class="btn btn-primary btn-block" />

                        </td>
                        <td>
                           <a class="btn btn-primary btn-block" asp-action="Index">Back to List</a>
                        </td>
                    </tr>
                </table>
            </div>
        </form>
    </div>
</div>

<div>
</div>


@section Scripts {
    <script>
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}