@model Traveller.Domain.Destination

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Create">Create New Destination</a>
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="View">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  asp-for="CountryID"  class="control-label"></label>
                <select asp-for="CountryID" class ="form-control" asp-items="ViewBag.CountryID"></select>
            </div>
            <div class="form-group">
                <table>
                    <tr>
                        <td>
                            <input type="submit" value="Create" class="btn btn-primary btn-block" />

                        </td>
                        <td>
                           <a class="btn btn-primary btn-block" asp-action="Index">Back to List</a>
                        </td>
                    </tr>
                </table>
            </div>
        </form>
    </div>
</div>

