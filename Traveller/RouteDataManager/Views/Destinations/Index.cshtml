@model RouteDataManager.ViewModels.DestinationIndexViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Showing all destinations</h4>
<hr />

<form asp-action="Index">
<p>
     <a asp-action="Index" class="btn btn-primary rounded-0"><i class="fa fa-plus-circle"></i>Add New</a>
</p>
            <div class="form-group">
                <table class="table">
                 <thead>

                <tr>
                    <th>
                        
                    </th>
                    <th>
                        Select a country
                    </th>

                    <th>
                        <label class="control-label">Country</label>
                        <select asp-for="@Model.FilterCountry.CountryID" class ="form-control" asp-items="ViewBag.CountryID"></select>
                    </th>
                    
                    <th>
                            <input type="submit" value="Search" class="btn btn-primary btn-block" />
                    </th>
                </tr>

                </thead>
                </table>

            </div>
</form>

<table class="table">
    <thead>
        <tr>         
            <th>
               Name
            </th>
            <th>
               Description
            </th>
            <th>
               Destination Type
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Destinations) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DestinationType.Description)
            </td>
             
            <td>    <a asp-action="Edit"  class="btn btn-primary btn-block" asp-route-id="@item.DestinationID">Edit</a></td>
             <td>   <a asp-action="Details" class="btn btn-primary btn-block" asp-route-id="@item.DestinationID">Details</a> </td>
             <td>   <a asp-action="Delete" class="btn btn-primary btn-block" asp-route-id="@item.DestinationID">Delete</a> </td>
        </tr>
}
    </tbody>
</table>
