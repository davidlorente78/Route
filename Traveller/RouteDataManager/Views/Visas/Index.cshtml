@using RouteDataManager.ViewModels
@model VisaIndexViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Index">

    <div class="form-group">
        <table class="table">
            <thead>

                <tr>
                    <th>
                        <label class="control-label">Country</label>
                        <select  id ="ddlCountries" asp-for="@Model.FilterCountry.CountryID"  class="form-control" asp-items="@Model.SelectListCountries"></select>
                    </th>

                    <th>
                        <label class="control-label">Qualify Nationality</label>
                        <select id ="ddlNationalities" asp-for="@Model.FilterNationality.NationalityID" class="form-control" asp-items="@Model.SelectListNationalities"></select>
                    </th>

                    <th>

                    </th>

                    <th>

                    </th>

                    <th>
                        <input type="submit" value="Search" class="btn btn-primary btn-block" />
                    </th>
                </tr>

            </thead>
        </table>

    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-primary rounded-0"><i class="fa fa-plus-circle"></i>Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Name
            </th>
        
            <th>
               Description
            </th>
            <th>
               On Line
            </th>
            <th>
               On Arrival
            </th>         
            <th>
              Duration
            </th>
            <th>
              Entries
            </th>
            <th>
               Category
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Visas) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>         
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OnLine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OnArrival)
            </td>
         
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Entries)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
       

               <td>   <a asp-action="Edit" class="btn btn-primary btn-block" asp-route-id="@item.VisaID">Edit</a></td>
                <td>  <a asp-action="Details" class="btn btn-primary btn-block" asp-route-id="@item.VisaID">Details</a> </td>
                <td>  <a asp-action="Delete" class="btn btn-primary btn-block" asp-route-id="@item.VisaID">Delete</a> </td>

            </tr>
}
    </tbody>
</table>


