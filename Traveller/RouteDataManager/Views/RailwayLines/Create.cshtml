@model RouteDataManager.ViewModels.RailwaySystem.RailwayLineViewModel


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Creating new Line</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LineType" class="control-label"></label>
                <input asp-for="LineType" class="form-control" />
                <span asp-validation-for="LineType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <select asp-for="@Model.CountryID" class="form-control" asp-items="@Model.SelectListCountries"></select>
            </div>
            <div class="form-group">
                <table>
                    <tr>
                        <td>
                            <input type="submit" value="Create" class="btn btn-primary btn-block" />
                        </td>
                        <td>
                            <a class="btn btn-primary btn-block" asp-action="Index">Back to List </a>

                        </td>
                    </tr>
                </table>
            </div>
        </form>
    </div>
</div>

