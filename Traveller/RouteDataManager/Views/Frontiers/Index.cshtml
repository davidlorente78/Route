@model IEnumerable<Traveller.Domain.Frontier>


<h4>Showing all frontiers</h4>
<hr />
<p>
    <a asp-action="Create" class="btn btn-primary rounded-0"><i class="fa fa-plus-circle"></i> Add New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Origin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Final)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Frontier Type
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Origin.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Final.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FrontierType.Description)
            </td>

             <td>    <a asp-action="Edit"  class="btn btn-primary btn-block" asp-route-id="@item.FrontierID">Edit</a></td>
             <td>   <a asp-action="Details" class="btn btn-primary btn-block" asp-route-id="@item.FrontierID">Details</a> </td>
             <td>   <a asp-action="Delete" class="btn btn-primary btn-block" asp-route-id="@item.FrontierID">Delete</a> </td>
      
          
        </tr>
}

